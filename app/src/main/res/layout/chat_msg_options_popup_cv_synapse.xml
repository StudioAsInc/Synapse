<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/popup_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<androidx.cardview.widget.CardView
				android:id="@+id/menu_card"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="56dp"
				android:layout_marginTop="75dp"
				android:layout_marginRight="56dp"
				android:layout_marginBottom="75dp"
				app:cardElevation="1dp"
				app:cardCornerRadius="14dp">
				<LinearLayout
					android:id="@+id/body"
					android:layout_width="190dp"
					android:layout_height="wrap_content"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/reaction_layout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<HorizontalScrollView
							android:id="@+id/hscroll1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
							<LinearLayout
								android:id="@+id/reactions_container"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:orientation="horizontal">
								<TextView
									android:id="@+id/thumb_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="👍"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Love_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="❤️"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Cat_Wow_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="🙀"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Cat_Laught_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="😹"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Cat_Sad_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="😿"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Dislike_reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="👎"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
								<TextView
									android:id="@+id/Cool__reaction_btn"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="😎"
									android:textSize="25sp"
									android:textColor="#000000"
									android:focusable="true" />
							</LinearLayout>
						</HorizontalScrollView>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/edit"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/edit_icon"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/icon_drive_file_rename_outline_round"
							android:scaleType="fitCenter"
							android:focusable="false" />
						<TextView
							android:id="@+id/edit_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							android:focusable="false"
							tools:replace="android:text" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/reply"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/reply_icon"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/icon_reply_round_themed"
							android:scaleType="fitCenter"
							android:focusable="false" />
						<TextView
							android:id="@+id/reply_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							android:focusable="false"
							tools:replace="android:text" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/copy"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/copy_icon"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/icon_content_copy_round"
							android:scaleType="fitCenter"
							android:focusable="false" />
						<TextView
							android:id="@+id/copy_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							android:focusable="false"
							tools:replace="android:text" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/delete"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/delete_icon"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/icon_auto_delete_round"
							android:scaleType="fitCenter"
							android:focusable="false" />
						<TextView
							android:id="@+id/delete_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							android:focusable="false"
							tools:replace="android:text" />
					</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
