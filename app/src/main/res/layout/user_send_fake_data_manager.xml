<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/mBack"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/ic_arrow_back_black"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/mTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Send Fake Data"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/spc"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter"
				android:alpha="0.0" />
		</LinearLayout>
		<ScrollView
			android:id="@+id/scroll_bar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#F5F5F5">
			<LinearLayout
				android:id="@+id/scroll_bar_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/info_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_layout_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="INFO"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#000000" />
					<TextView
						android:id="@+id/info_layout_subtext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="When you submit fake data it will not appear in the user's followers/following/profile likes list."
						android:textSize="16sp"
						android:textColor="#757575" />
				</LinearLayout>
				<TextView
					android:id="@+id/enter_user_uid_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:text="User UID"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/enter_user_uid_subtext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:text="Enter the uid of the user you want to send fake data to here."
					android:textSize="16sp"
					android:textColor="#757575" />
				<LinearLayout
					android:id="@+id/enter_user_uid_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<EditText
						android:id="@+id/enter_user_uid_stage_uid"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="14dp"
						android:background="#F5F5F5"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="User UID"
						android:textColorHint="#757575"
						android:singleLine="true" />
				</LinearLayout>
				<TextView
					android:id="@+id/send_fake_followers_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="16dp"
					android:text="Send Fake Followers"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<LinearLayout
					android:id="@+id/send_fake_followers_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<EditText
						android:id="@+id/send_fake_followers_stage_count"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:padding="14dp"
						android:background="#F5F5F5"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Followers Count"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:inputType="numberDecimal" />
					<TextView
						android:id="@+id/send_fake_followers_stage_send"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="12dp"
						android:paddingBottom="12dp"
						android:background="#000000"
						android:gravity="center_horizontal|center_vertical"
						android:text="Send Followers"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<TextView
					android:id="@+id/send_fake_followed_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="16dp"
					android:text="Send Fake Followeds"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<LinearLayout
					android:id="@+id/send_fake_followed_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<EditText
						android:id="@+id/send_fake_followed_stage_count"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:padding="14dp"
						android:background="#F5F5F5"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Followeds Count"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:inputType="numberDecimal" />
					<TextView
						android:id="@+id/send_fake_followed_stage_send"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="12dp"
						android:paddingBottom="12dp"
						android:background="#000000"
						android:gravity="center_horizontal|center_vertical"
						android:text="Send Followeds"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<TextView
					android:id="@+id/send_fake_profile_likes"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="16dp"
					android:text="Send Fake Profile Likes"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<LinearLayout
					android:id="@+id/send_fake_profile_likes_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<EditText
						android:id="@+id/send_fake_profile_likes_stage_count"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:padding="14dp"
						android:background="#F5F5F5"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Profile Likes Count"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:inputType="numberDecimal" />
					<TextView
						android:id="@+id/send_fake_profile_likes_stage_send"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="12dp"
						android:paddingBottom="12dp"
						android:background="#000000"
						android:gravity="center_horizontal|center_vertical"
						android:text="Send Profile Likes"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
