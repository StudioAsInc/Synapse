<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<RelativeLayout
			android:id="@+id/profileCardRelative"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="11dp"
			android:orientation="vertical">
			<androidx.cardview.widget.CardView
				android:id="@+id/profileCard"
				android:layout_width="56dp"
				android:layout_height="56dp"
				app:cardBackgroundColor="@android:color/transparent"
				app:cardElevation="0dp">
				<ImageView
					android:id="@+id/profileCardImage"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/avatar"
					android:scaleType="centerCrop" />
			</androidx.cardview.widget.CardView>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/lin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/usr"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/spc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:layout_weight="1">
					<TextView
						android:id="@+id/groupName"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="TextView"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:singleLine="true"
						android:maxWidth="145dp" />
					<ImageView
						android:id="@+id/genderBadge"
						android:focusable="false"
						android:layout_width="0dp"
						android:layout_height="16dp"
						android:layout_marginLeft="6dp"
						android:src="@drawable/male_badge"
						android:scaleType="centerInside" />
					<ImageView
						android:id="@+id/verifiedBadge"
						android:focusable="false"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginLeft="1dp"
						android:layout_marginBottom="1dp"
						android:src="@drawable/verified_badge"
						android:scaleType="centerInside" />
				</LinearLayout>
				<TextView
					android:id="@+id/push"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:text="date"
					android:textSize="16sp"
					android:textColor="#616161"
					android:alpha="0.0" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnss"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/last_message"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:layout_marginRight="8dp"
					android:text="..."
					android:textSize="16sp"
					android:textColor="#616161"
					android:singleLine="true"
					android:layout_weight="1"
					android:maxWidth="170dp" />
				<ImageView
					android:id="@+id/message_state"
					android:focusable="false"
					android:layout_width="18dp"
					android:layout_height="18dp"
					android:layout_marginTop="4dp"
					android:layout_marginRight="8dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside"
					android:alpha="0.0" />
				<TextView
					android:id="@+id/unread_messages_count_badge"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:layout_marginRight="8dp"
					android:paddingLeft="7dp"
					android:paddingTop="2dp"
					android:paddingRight="7dp"
					android:paddingBottom="2dp"
					android:background="#2196F3"
					android:gravity="center_horizontal|center_vertical"
					android:text="0"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:alpha="0.0" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
