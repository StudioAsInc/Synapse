<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.cardview.widget.CardView
		android:id="@+id/roundLayoutBS"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="#FFFFFF"
		app:cardElevation="0dp"
		app:cardCornerRadius="20dp">
		<LinearLayout
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:paddingRight="15dp"
			android:paddingBottom="10dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/bar"
				android:layout_width="50dp"
				android:layout_height="5dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:background="@drawable/bsbar" />
			<TextView
				android:id="@+id/textview30"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="15dp"
				android:text="Scan on Bybit"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<ImageView
				android:id="@+id/QR"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="240dp"
				android:layout_marginTop="5dp"
				android:src="@drawable/bybitqr"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/number"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="20dp"
				android:text="4 4 9    2 9 0    4 3 5"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#E2136E" />
			<LinearLayout
				android:id="@+id/linear9"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="12dp"
				android:orientation="vertical"
				android:background="@drawable/dash_effect_border">
				<LinearLayout
					android:id="@+id/linear4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview6"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Username"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/username"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Ashik"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview7"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Bybit UID"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/uid"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="449290435"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear31"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/txt_network"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Send via email"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/network_name"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Ethereum (ERC20)"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear21"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview29"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Wallet address"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/address"
						android:focusable="false"
						android:layout_width="220dp"
						android:layout_height="wrap_content"
						android:text="0x26c799dd2b92042bd12af0157843a46be7b03dbb"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview10"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Send via email"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/mail"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="mashikahamed0\@gmail.com"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview11"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Send via phone number"
						android:textSize="12sp"
						android:textColor="#616161"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/phone"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="N/A"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#212121" />
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/instructions"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Hold the number to copy and hold the QR code to save it on device storage."
				android:textSize="10sp"
				android:textColor="#9E9E9E" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
