<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/BG"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:gravity="center_horizontal|top"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="10dp"
			android:paddingRight="8dp"
			android:background="#F6F7FB"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layoutAnimation="@anim/layout">
			<ImageView
				android:id="@+id/back"
				android:layout_width="25dp"
				android:layout_height="40dp"
				android:layout_marginRight="10dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:gravity="top"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/user_dp"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/default_image"
					android:scaleType="fitCenter" />
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="10dp"
					android:padding="1dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/group_name_txt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2dp"
						android:background="@android:color/transparent"
						android:text="Group name"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#212121" />
					<TextView
						android:id="@+id/group_creator_txt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="1dp"
						android:background="@android:color/transparent"
						android:gravity="center_horizontal|center_vertical"
						android:text="StudioAs Inc."
						android:textSize="11sp"
						android:textStyle="bold"
						android:textColor="#03A9F4" />
				</LinearLayout>
				<ImageView
					android:id="@+id/verified"
					android:layout_width="17dp"
					android:layout_height="20dp"
					android:src="@drawable/verified_badge"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<ImageView
				android:id="@+id/imageview_del"
				android:layout_width="20dp"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<ImageView
				android:id="@+id/imageview_help"
				android:layout_width="20dp"
				android:layout_height="match_parent"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerview1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFFFFF"
			android:layout_weight="1"
			tools:listitem="@layout/group_chat" />
		<LinearLayout
			android:id="@+id/mMessageReplyLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/mMessageReplyLayoutBody"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/mMessageReplyLayoutBodyIc"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginRight="8dp"
					android:padding="10dp"
					android:src="@drawable/line_video_player_icons_4"
					android:scaleType="centerInside" />
				<LinearLayout
					android:id="@+id/mMessageReplyLayoutBodyRight"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/mMessageReplyLayoutBodyRightUsername"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Username"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#2962FF"
						android:singleLine="true" />
					<TextView
						android:id="@+id/mMessageReplyLayoutBodyRightMessage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Message"
						android:textSize="14sp"
						android:textColor="#616161"
						android:singleLine="true" />
				</LinearLayout>
				<ImageView
					android:id="@+id/mMessageReplyLayoutBodyCancel"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginLeft="8dp"
					android:padding="10dp"
					android:src="@drawable/default_image"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/mMessageReplyLayoutSpace"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:padding="8dp"
				android:background="#F5F5F5"
				android:orientation="horizontal" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/message_input_overall_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingTop="8dp"
			android:paddingRight="10dp"
			android:paddingBottom="8dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/message_input_outlined_round"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="3dp"
				android:background="#FFFFFF"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:maxLength="1000">
				<LinearLayout
					android:id="@+id/img_container_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<androidx.cardview.widget.CardView
						android:id="@+id/imgRoundLayout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:cardElevation="0dp"
						app:cardCornerRadius="20dp">
						<ImageView
							android:id="@+id/selected_img_preview"
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:src="@drawable/default_image"
							android:scaleType="centerCrop" />
					</androidx.cardview.widget.CardView>
					<ImageView
						android:id="@+id/remove_selected_img_icon"
						android:layout_width="23dp"
						android:layout_height="23dp"
						android:src="@drawable/remove_ic"
						android:scaleType="fitCenter"
						android:translationX="-23.0dp"
						android:translationY="-23.0dp" />
					<LinearLayout
						android:id="@+id/img_name_container"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left|center_vertical"
						android:orientation="vertical"
						android:translationX="-15.0dp">
						<TextView
							android:id="@+id/img_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Image.png"
							android:textSize="14sp"
							android:textColor="#424242"
							android:maxLength="50" />
						<ProgressBar
							android:id="@+id/img_upload_prog"
							android:layout_width="match_parent"
							android:layout_height="20dp"
							android:indeterminate="false"
							style="?android:progressBarStyleHorizontal" />
					</LinearLayout>
				</LinearLayout>
				<com.synapse.social.studioasinc.FadeEditText
					android:id="@+id/message_et"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="18sp"
					android:textColor="#000000"
					android:hint="Type message"
					android:textColorHint="#607D8B"
					android:layout_weight="1" />
				<LinearLayout
					android:id="@+id/camera_gallery_btn_container_round"
					android:layout_width="wrap_content"
					android:layout_height="60dp"
					android:paddingLeft="22dp"
					android:paddingTop="12dp"
					android:paddingRight="22dp"
					android:paddingBottom="12dp"
					android:background="#F0F3F8"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/expand_send_type_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/iconss_1"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider_mic_camera"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/gallery_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/icons_2"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/attachment_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/iconss_3"
						android:scaleType="fitCenter"
						android:rotation="90" />
					<LinearLayout
						android:id="@+id/devider1"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/send_type_voice_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/mic"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider2"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/more_send_type_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/iconss_5"
						android:scaleType="fitCenter" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/send_round_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="13dp"
				android:padding="5dp"
				android:background="#F0F3F8"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/send_ic"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:padding="10dp"
					android:background="@android:color/transparent"
					android:src="@drawable/love_ic"
					android:scaleType="fitCenter" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottomAudioRecorder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/bottomAudioRecorderCancel"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:padding="10dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/bottomAudioRecorderTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="00:00"
				android:textSize="16sp"
				android:textColor="#000000"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/bottomAudioRecorderSend"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:padding="8dp"
				android:background="#F0F3F8"
				android:src="@drawable/icons_3"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<TextView
			android:id="@+id/unblock_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingTop="15dp"
			android:paddingRight="10dp"
			android:paddingBottom="15dp"
			android:background="#2962FF"
			android:gravity="center_horizontal|center_vertical"
			android:text="Unblock"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF" />
		<TextView
			android:id="@+id/blocked_txt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:background="#F0F3F8"
			android:gravity="center_horizontal|bottom"
			android:text="You can't reply to this conversation. Learn more"
			android:textSize="14sp"
			android:textColor="#000000" />
	</LinearLayout>
</LinearLayout>
