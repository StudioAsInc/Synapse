<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="12dp"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/user_info"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<androidx.cardview.widget.CardView
					android:id="@+id/user_profile_card"
					android:layout_width="48dp"
					android:layout_height="48dp"
					app:cardElevation="0dp">
					<ImageView
						android:id="@+id/user_profile_image"
						android:focusable="false"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:src="@drawable/avatar"
						android:scaleType="centerCrop" />
				</androidx.cardview.widget.CardView>
				<LinearLayout
					android:id="@+id/user_right"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:orientation="vertical"
					android:layout_weight="1">
					<LinearLayout
						android:id="@+id/user_right_layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/user_nickname"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="4dp"
							android:text="Username"
							android:textStyle="bold"
							android:textColor="#000000"
							tools:replace="android:textSize"
							android:textSize="14dp" />
						<ImageView
							android:id="@+id/user_gender"
							android:focusable="false"
							android:layout_width="16dp"
							android:layout_height="16dp"
							android:layout_marginRight="6dp"
							android:src="@drawable/default_image"
							android:scaleType="centerInside" />
						<ImageView
							android:id="@+id/user_verified"
							android:focusable="false"
							android:layout_width="16dp"
							android:layout_height="16dp"
							android:layout_marginRight="6dp"
							android:src="@drawable/verified_badge"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/user_username"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="TextView"
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
				<ImageView
					android:id="@+id/user_go_profile_arrow"
					android:focusable="false"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:padding="14dp"
					android:src="@drawable/arrow_icms_2"
					android:scaleType="centerCrop" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/request_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/reporter_user_message"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="12dp"
					android:text="Reporter User Message"
					android:textSize="16sp"
					android:textColor="#757575" />
				<LinearLayout
					android:id="@+id/request_category_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/request_category_layout_title"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="Report Category: "
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#757575"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/request_category_layout_category"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="category"
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/report_send_date_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/report_send_date_layout_title"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="Report Date"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#757575"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/report_send_date_layout_time"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="00-00-0000"
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/spc"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
	</LinearLayout>
</LinearLayout>
